<div class="row">

    <div class="span6 offset3">
    
    <%= form_for(@staff, :url => { :action => 'create', :controller => 'staff' }, :method => :post) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :mobilephone %>
        <%= f.text_field :mobilephone %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <div class="btn-group" data-toggle="buttons-checkbox">

            <% @projects.each do |p| %>

                <div>
                    <%= check_box_tag 'staff[project_ids][]', p.id, @staff.projects.include?(p) %>
                    <%= p.year %>
                </div>
                
            <% end %>

        </div>

        <br>

        <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    
    <% end %>
    
    </div>

</div>